<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/sentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sentdatacolor"
        android:text="10/08/2020"
        android:textSize="18dp"/>
    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sentdatacolor"
        android:text="chain"
        android:textSize="18dp"/>

    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/itemWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sentdatacolor"
        android:text="Weight : 60 G"
        android:textSize="18dp"/>

    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/itemTouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sentdatacolor"
        android:text="Touch : 92 T"
        android:textSize="18dp"/>

    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/itemFineWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sentdatacolor"
        android:text="Fine Weight : 55.200 G"
        android:textSize="18dp"/>
    <CheckBox
        android:id="@+id/selectCB"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black"/>
</LinearLayout>