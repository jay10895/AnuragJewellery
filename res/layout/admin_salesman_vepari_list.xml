<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#f2f2f2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_10sdp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/salesman_vepari_srno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_minus11sdp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/salesman_vepari_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="@dimen/_minus10sdp"
        android:layout_marginEnd="@dimen/_minus10sdp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp"
        />
    <TextView
        android:id="@+id/salesman_vepari_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_minus1sdp"
        android:layout_marginEnd="@dimen/_minus15sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp"
        />

    <TextView
        android:id="@+id/salesman_vepari_fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_minus5sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_gravity="center|right"
        android:gravity="center|right"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/salesman_vepari_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_minus5sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_gravity="center|right"
        android:gravity="center|right"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp" />

    <Button
        android:id="@+id/salesman_vepari_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_weight="1"
        android:layout_gravity="center|right"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp"
        android:visibility="gone"
        />

</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/colorPrimary"/>


</LinearLayout>